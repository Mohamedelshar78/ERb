<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mask_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Log in"
        android:textColor="#04855C"
        android:textSize="40sp"

        />

    <TextView
        android:id="@+id/text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/text_login"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/input_field_username"
        android:layout_width="353dp"
        android:layout_height="56dp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/text_username"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="25dp"
        android:paddingEnd="15dp"
        android:padding="8dp"
        android:layout_marginBottom="25dp"
        android:hint="Enter Username"
        android:textSize="17sp"
        android:textColorHint="#66000000"
        android:background="@drawable/input_text_filed" />


    <TextView
        android:id="@+id/text_userpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/input_field_username"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/xx"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_userpassword"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:padding="8dp"
            android:paddingEnd="15dp"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:textSize="17sp"
            android:textColorHint="#66000000"
            android:background="@drawable/input_text_filed" />

        <ImageView
            android:id="@+id/password_visibility_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/input_password"
            android:layout_centerVertical="true"
            android:paddingEnd="8dp"
            android:src="@drawable/show_password"
            android:clickable="true"
            android:focusable="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_Forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:layout_below="@+id/xx"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="Forgot password?"
        android:textColor="@color/black"
        android:textSize="17sp" />


    <Button
        android:id="@+id/button_login"
        android:layout_width="353dp"
        android:layout_height="56dp"
        android:layout_below="@+id/xx"
        android:layout_marginTop="50dp"
        android:text="Log in"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:backgroundTint="@null"
        android:background="@drawable/button_registration"
        />

    <TextView
        android:id="@+id/test_another_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@+id/button_login"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="___________Or Login with___________"
        android:textColor="#66000000"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/liner_another"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="3"
        android:layout_below="@+id/test_another_login"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/button_with_faceboack"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_below="@+id/test_another_login"
            android:layout_marginStart="25dp"
            android:layout_weight="1"
            android:background="@drawable/input_text_filed"
            android:padding="3dp"
            android:src="@drawable/facebook_icon" />


        <ImageView
            android:id="@+id/button_with_google"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_below="@+id/test_another_login"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:background="@drawable/input_text_filed"
            android:padding="3dp"
            android:src="@drawable/google_icon" />

        <ImageButton
            android:id="@+id/button_with_apple"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/input_text_filed"
            android:padding="3dp"
            android:src="@drawable/apple_icon" />

    </LinearLayout>
    <TextView
        android:id="@+id/text_dont_hav_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_below="@+id/liner_another"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:text="Donâ€™t have an account? "
        android:lineSpacingExtra="2sp"
        android:layout_marginBottom="20dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="center" />

    <TextView
        android:id="@+id/go_to_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner_another"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="45dp"
        android:gravity="left"
        android:textColor="@color/green"
        android:lineSpacingExtra="1sp"
        android:layout_marginStart="240dp"
        android:text="Sign up "
        android:textSize="15sp" />


</RelativeLayout>
