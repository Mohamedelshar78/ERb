<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mask_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Sign up"
        android:textColor="#04855C"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/text_login"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/input_field_username"
        android:layout_width="353dp"
        android:layout_height="56dp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/text_username"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="25dp"
        android:paddingEnd="15dp"
        android:padding="8dp"
        android:hint="John Doe"
        android:textSize="17sp"
        android:textColorHint="#66000000"
        android:background="@drawable/input_text_filed" />


    <TextView
        android:id="@+id/text_useremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/input_field_username"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/input_user_email"
        android:layout_width="353dp"
        android:layout_height="56dp"
        android:layout_below="@+id/text_useremail"
        android:layout_marginTop="2dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:padding="8dp"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:textSize="17sp"
        android:textColorHint="#66000000"
        android:background="@drawable/input_text_filed"

        />

    <TextView
        android:id="@+id/text_user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/input_user_email"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Create a password"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/xx"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_user_password"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_create_user_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:padding="8dp"
            android:paddingEnd="15dp"
            android:hint="must be 8 characters"
            android:inputType="textPassword"
            android:textSize="17sp"
            android:textColorHint="#66000000"
            android:background="@drawable/input_text_filed" />

        <ImageView
            android:id="@+id/password_create_visibility_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/input_create_user_password"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:scaleY="0.5"
            android:scaleX="0.7"
            android:src="@drawable/show_password"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:id="@+id/textinput_error"
            android:layout_below="@+id/input_create_user_password"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:textColor="#66FF0000"
            android:textStyle="bold"
            android:textSize="12dp"
            />


    </RelativeLayout>


    <TextView
        android:id="@+id/text_repate_user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/xx"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Confirm password"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/mm"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_repate_user_password"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_repate_user_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:padding="8dp"
            android:paddingEnd="15dp"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:textSize="17sp"
            android:textColorHint="#66000000"
            android:background="@drawable/input_text_filed" />

        <ImageView
            android:id="@+id/password_confirm_visibility_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/input_repate_user_password"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:scaleY="0.5"
            android:scaleX="0.7"
            android:src="@drawable/show_password"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:id="@+id/textinput_error_cant_match"
            android:layout_below="@+id/input_repate_user_password"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:textColor="#66FF0000"
            android:textStyle="bold"
            android:textSize="12dp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/button_register"
        android:layout_width="353dp"
        android:layout_height="56dp"
        android:layout_below="@+id/mm"
        android:layout_marginTop="30dp"
        android:text="Register"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:backgroundTint="@null"
        android:background="@drawable/button_registration"
        />

    <TextView
        android:id="@+id/test_another_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@+id/button_register"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="__________________ Or ___________________"
        android:textColor="#66000000"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/liner_another"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="3"
        android:layout_below="@+id/test_another_login"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/button_with_faceboack"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_below="@+id/test_another_login"
            android:layout_marginStart="25dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@drawable/input_text_filed"
            android:padding="3dp"
            android:src="@drawable/facebook_icon" />


        <ImageView
            android:id="@+id/button_with_google"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_below="@+id/test_another_login"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:background="@drawable/input_text_filed"
            android:padding="3dp"
            android:src="@drawable/google_icon" />

        <ImageView
            android:id="@+id/button_with_apple"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/input_text_filed"
            android:padding="3dp"
            android:src="@drawable/apple_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_dont_hav_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:textAlignment="center"
        android:text="Donâ€™t have an account? "
        android:lineSpacingExtra="2sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_below="@+id/liner_another"
        android:gravity="center" />

    <TextView
        android:id="@+id/go_to_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:layout_below="@+id/liner_another"
        android:textColor="@color/green"
        android:lineSpacingExtra="1sp"
        android:layout_marginStart="240dp"
        android:text="Sign up "
        android:textSize="15sp" />


</RelativeLayout>
