<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ger_your_gr" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B3FCFCFC</item>
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Adjusted font family to Gilroy-Medium -->
        <item name="android:lineHeight">15sp</item>
    </style>
    <style name="WelcomeTextStyle" parent="android:TextAppearance">
        <item name="android:fontFamily">Gilroy</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item> <!-- Assuming font-weight: 600 corresponds to bold -->
        <item name="android:textColor">#000000</item> <!-- Change to your desired text color -->
        <item name="android:lineHeight">29dp</item>
        <!-- Note: lineSpacingExtra is not supported in styles.xml -->
    </style>
    <style name="already_hav">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">#030303</item>
        <!-- You can add more attributes here if needed -->
    </style>


</resources>